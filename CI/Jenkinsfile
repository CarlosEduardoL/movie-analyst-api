pipeline {
    agent any
    environment {
        HOME = '.'
        PROJECT = "zeronetdev/rampup-back"
        container = null
        failed_stage = null
    }
    stages {
        stage("test"){
            agent {
                docker { image 'node:16-alpine' }
            }
            steps {
                sh 'npm install'
                sh 'npm test'
                junit '**/test-results.xml'
            }
            post {
                failure {
                    environment {
                        failed_stage = "test"
                    }
                }
            }
        }
        stage("build back image"){
            steps {
                script {
                    container = docker.build(PROJECT)
                }
            }
            post {
                failure {
                    environment {
                        failed_stage = "build image"
                    }
                }
            }
        }
        stage("push image"){
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        container.push("${BUILD_NUMBER}")
                    }
                }
            }
            post {
                failure {
                    environment {
                        failed_stage = "push image"
                    }
                }
            }
        }
        stage("clean") {
            steps {
                sh 'for image in \$(docker images | grep zeronetdev/rampup-back | awk \'{print \$3}\'| uniq); do docker rmi -f \$image; done'
            }
            post {
                failure {
                    environment {
                        failed_stage = "clean images"
                    }
                }
            }
        }
    }
    post {
        failure {
            mail to: 'carlos.lizalda1@gmail.com',
                subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
                body: "Something is wrong with ${env.BUILD_URL} on ${env.failed_stage} stage"
        }
    }
}